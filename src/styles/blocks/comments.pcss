.comments {
  display: flex;
  justify-content: space-between;
}

.comments-left {
  width: 40%;
}

.comments-right {
  width: 45%;
}

.comments__description {
  opacity: 0.3;
  line-height: 30px;
  margin-bottom: 25px;
}

.comments__quote {
  line-height: 30px;
  opacity: 0.3;
  margin-bottom: 25px;
}

.comments__quote-author {
  font-style: italic;
}
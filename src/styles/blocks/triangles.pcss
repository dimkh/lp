.values-section {
  position: relative;
}

.values-section__triangles {
  position: absolute;
  bottom: 100%;
  left: 0;
  right: 0;
}

.triangles {
  display: flex;
  color: #fff;
}

.triangle {
  fill: currentColor;
}

.triangles__item {
  width: 50%;
  height: 100px;
}


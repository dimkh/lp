//   height: 50px;
//   margin-right: 40px;
// }

.socials__item-circle {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1px solid #fff;
  opacity: .3;
}

.socials__icon {
  &:hover {
    fill: #5500f2;
  }
}

.socials__icon--footer {
  position: absolute;
  top: 50%;
  left: 50%;
  // transform: translate(-50%, -50%);
  fill-opacity: 0.3;
  width: 100%;
}
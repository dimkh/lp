.socials {
  display: flex;
  align-items: center;

  &--noactive {
    display: none;
  }

  @include tablets {
    margin-right: 80px;
  }
}

.socials__item {
  margin-right: 40px;

  @include big-tablets {
    margin-right: 20px;
  }

  @include tablets {
    margin-right: 40px;
  }

  &:last-child {
    margin-right: 0;
  }
}

.social__item--footer {
  width: 50px;
  margin-right: 20px;

  &:last-child {
    margin-right: 0;
  }
}
.socials__link {
  width: 31px;
  height: 25px;
  display: block;
}

.social__link--footer {
  width: 25px;
  height: 20px;
  display: block;
  position: relative;

  &:hover .socials__item-circle {
    opacity: 1;
  }

  &:hover .socials__icon--footer {
    fill-opacity: 1;
  }
}

// .social__item {
